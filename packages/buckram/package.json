{
  "name": "buckram",
  "version": "0.2.0",
  "description": "Opinionated SCSS components for books (web, EPUB and PDF).",
  "scripts": {
    "test": "npm run lint",
    "lint": "npm run lint:styles",
    "lint:styles":
      "node_modules/stylelint/bin/stylelint.js '**/*.scss' --config node_modules/pressbooks-build-tools/config/stylelint.js",
    "docs": "node_modules/sassdoc/bin/sassdoc styles --config sassdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pressbooks/buckram.git"
  },
  "author": "Pressbooks (Book Oven Inc.)",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/pressbooks/buckram/issues"
  },
  "homepage": "https://github.com/pressbooks/buckram#readme",
  "engines": {
    "node": ">= 6.9.4"
  },
  "dependencies": {},
  "devDependencies": {
    "pressbooks-build-tools": "^0.9.0",
    "sassdoc": "^2.5.0"
  },
  "stylelint": {
    "extends": "./node_modules/pressbooks-build-tools/config/stylelint.js"
  }
}
